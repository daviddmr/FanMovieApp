<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_movie_poster"
        android:layout_width="90dp"
        android:layout_height="135dp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"/>

    <ProgressBar
        android:id="@+id/pb_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_movie_poster"
        android:layout_alignStart="@+id/iv_movie_poster"
        android:layout_alignRight="@+id/iv_movie_poster"
        android:layout_alignEnd="@+id/iv_movie_poster"
        android:layout_below="@+id/iv_movie_poster"
        android:text="Um sonho de liberdade"
        />

    <TextView
        android:id="@+id/tv_movie_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-4dp"
        android:layout_below="@+id/tv_movie_title"
        android:layout_alignLeft="@+id/iv_movie_poster"
        android:layout_alignStart="@+id/iv_movie_poster"
        android:layout_alignRight="@+id/iv_movie_poster"
        android:layout_alignEnd="@+id/iv_movie_poster"
        android:drawableStart="@mipmap/ic_star"
        android:drawableLeft="@mipmap/ic_star"/>

</RelativeLayout>